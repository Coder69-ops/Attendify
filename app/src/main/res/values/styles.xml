<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Add your styles here if needed -->
    
    <!-- AppBarLayout style with proper insets -->
    <style name="Widget.Attendify.AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:paddingTop">0dp</item>
    </style>
    
    <!-- Custom toolbar style with centered content -->
    <style name="Widget.Attendify.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/status_bar_padding</item>
        <item name="titleTextAppearance">@style/TextAppearance.Attendify.Headline2</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="titleCentered">false</item>
        <item name="contentInsetStartWithNavigation">8dp</item>
    </style>
    
    <!-- Style for title-centered toolbar -->
    <style name="Widget.Attendify.Toolbar.Centered" parent="Widget.Attendify.Toolbar">
        <item name="titleCentered">true</item>
    </style>
    
    <!-- Headline text style for compact toolbars -->
    <style name="TextAppearance.Attendify.Headline3" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <!-- Additional styles not in themes.xml -->
    <style name="TextAppearance.Attendify.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Attendify.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Attendify.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray_600</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
</resources>